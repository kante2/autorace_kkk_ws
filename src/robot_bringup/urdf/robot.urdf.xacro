<?xml version="1.0"?>
<robot name="autorace_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- base_link -->
  <link name="base_link"/>
  <!-- 라이다 프레임 -->
  <link name="laser"/>
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child  link="laser"/>
    <!-- 예: 앞 0.20m, 위 0.10m, 롤/피치/요 0 -->
    <origin xyz="0.20 0.0 0.10" rpy="0 0 0"/>
  </joint>
  <!-- 카메라 프레임들(옵션) -->
  <link name="camera_link"/>
  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child  link="camera_link"/>
    <origin xyz="0.15 0.0 0.25" rpy="0 0 0"/>
  </joint>
  <!-- 필요하면 camera_optical_frame 추가(REP-105) -->
</robot>
