<launch>
  <node pkg="joy" type="joy_node" name="joy" output="screen">
    <param name="autorepeat_rate" value="25.0"/>   <!-- 기본 0.0 → 25Hz 권장 -->
    <param name="deadzone" value="0.05"/>
  </node>

  <node pkg="bringup" type="joystick.py" name="joystick" output="screen">
    <param name="joy_topic" value="/joy"/>
    <param name="motor_topic" value="/commands/motor/speed"/>
    <param name="servo_topic" value="/commands/servo/position"/>

    <param name="speed_axis" value="7"/>
    <param name="steer_axis" value="3"/>

    <param name="max_speed" value="5000.0"/>
    <param name="servo_scale" value="1.0"/>
    <param name="deadzone" value="0.05"/>
  </node>
</launch>