<!-- file: odometry_launch.launch -->
<launch>
  <!-- ROS1에서는 use_sim_time 전역 파라미터로 별도 설정 -->
  <param name="/use_sim_time" value="false"/>

  <!-- wheel_odom 파라미터 로드 -->
  <rosparam file="$(find robot_bringup)/config/wheel_odom.yaml" command="load"/>

  <!-- wheel_odom 노드 실행 -->
  <node pkg="robot_bringup" type="wheel_odom_node.py" name="wheel_odom" output="screen"/>

  <!-- EKF 파라미터 로드 -->
  <rosparam file="$(find robot_bringup)/config/ekf_wheel_imu.yaml" command="load"/>

  <!-- robot_localization EKF 노드 실행 -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_se_odom" output="screen"/>

</launch>
