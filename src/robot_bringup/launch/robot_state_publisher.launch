<launch>
  <!-- base_link → laser (예: x=0.20, z=0.10) -->
  <node pkg="tf" type="static_transform_publisher" name="static_laser_tf"
        args="0.20 0.0 0.10 0 0 0 base_link laser 100" />
  <!-- base_link → camera_link -->
  <node pkg="tf" type="static_transform_publisher" name="static_camera_tf"
        args="0.15 0.0 0.25 0 0 0 base_link camera_link 100" />
</launch>
